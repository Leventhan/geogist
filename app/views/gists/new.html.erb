
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>New Gist</h1>
    <hr>

    <div class="panel panel-default">
      <div class="panel-body">
        <div id='map' class='large'></div>
        <%= javascript_include_tag "new" %>
      </div>
      <ul class="list-group">
          <li class="list-group-item">
            <div data-alerts="alerts"></div>
            <%= simple_form_for @gist do |f| %>
            <%= f.input :content, as: :text, label: 'GeoJSON', input_html: { rows: 8 } %>
           </li>
           <li class="list-group-item">
            <%= f.input :description, as: :bootsy, input_html: { rows: 5 } %>
          </li>
        </ul>
        <div class="panel-footer">
            <%= f.button :submit, class: 'btn-success' %>
            <% end %>
            <%= link_to 'Back', gists_path, class: 'btn btn-default' %>
        </div>
    </div>
  </div>
</div>